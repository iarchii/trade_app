<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/displayNameTv"
        style="@style/HeadTitleStyle"
        tools:text="Google" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/symbolTv"
            style="@style/LabelStyle"
            tools:text="Goog30" />
        <View
            android:layout_width="@dimen/item_spacing"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/idTv"
            style="@style/LabelStyle"
            tools:text="#1234" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentPriceLabelTv"
            style="@style/LabelStyle"
            android:text="@string/current_price"/>
        <View
            android:layout_width="@dimen/item_spacing"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/currentPriceTv"
            style="@style/LabelStyle"
            tools:text="1234" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/closingPriceLabelTv"
            style="@style/LabelStyle"
            android:text="@string/closing_price"/>
        <View
            android:layout_width="@dimen/item_spacing"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/closingPriceTv"
            style="@style/LabelStyle"
            tools:text="100" />
    </LinearLayout>

    <TextView
        android:id="@+id/priceDiffPercentTv"
        style="@style/LabelStyle"
        tools:text="+ 1,25%"
        />

    <ImageView
        android:id="@+id/lockIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_lock"
        />

</LinearLayout>