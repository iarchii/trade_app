<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/circle_item_oval"
        android:layout_height="@dimen/circle_item_oval"
        android:layout_gravity="center"
        android:background="@drawable/black_oval"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/circle_item"
            android:layout_height="@dimen/circle_item"
            android:layout_gravity="center"
            android:background="@drawable/two_color_oval_background"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/productName"
                style="@style/CircleItemStyle.Head"
                tools:text="Google" />

            <TextView
                android:id="@+id/productPrice"
                tools:text="445,98"
                style="@style/CircleItemStyle" />

            <TextView
                android:id="@+id/productDiff"
                style="@style/CircleItemStyle"
                tools:text="+0,00%" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>